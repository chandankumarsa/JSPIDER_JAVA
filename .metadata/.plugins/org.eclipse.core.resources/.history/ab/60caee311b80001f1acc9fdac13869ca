package com.chandan;

import java.util.Scanner;

public class A {
	
	public static void main(String[] args) {
	System.out.println("Enter the Amount Calculate The Currency");
	Scanner sc = new Scanner(System.in);
	int amount = sc.nextInt();
	int count =0;
	if(amount>=2000) {
		count = amount/2000;
		System.out.println("2000's = 20000 x "+ count);
		amount = amount%2000;
	}
	if(amount>=500) {
		count = amount/500;
		System.out.println("500's = 500 x "+ count);
		amount = amount%500;
	}
	if(amount>=200) {
		count = count/200;
		System.out.println("200's = 200 x "+ count);
		amount = amount%200;
	}

		
	}

}


//write a java Program to Currency Calculator
